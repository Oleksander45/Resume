 {{#each goodsList }}
            <div class="col-6">
                <div class="card">
                    <img class="card-img-top mb-3" src="{{img}}" alt="#">
                    <div class="card-body ">
                        <h4>
                            {{#if isNew}}
                            <span class="badge text-bg-primary rounded-pill">New</span>
                            {{/if}}
                            {{#if isHot}}
                            <span class="badge text-bg-warning text-white rounded-pill">Hot</span>
                            {{/if}}
                        </h4>
                        {{#if isFast}}
                        <div class="my-2"> <button class="btn btn-success">Швидка доставка</button></div>
                        {{/if}}
                        {{#if isFree}}
                        <div class="my-2"> <button class="btn btn-secondary">Безкоштовна доставка</button> </div>
                        {{/if}}
                        <h5 class="card-title mt-2">
                            {{name}}
                        </h5>
                        {{#with review}}
                        <p>{{amount}} {{text}}</p>
                        {{/with}}
                        <h3>{{price}}</h3>
                        {{delivery}}
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <div class="my-2"> <a href="{{link}}" class="btn btn-primary">{{text}}</a> </div>
                        {{/if}}
                        {{#if isSecondary}}
                        <div class="my-2"> <a href="{{link}}" class="btn btn-secondary">{{text}}</a> </div>
                        {{/if}}
                        {{/each}}
                        {{#each  characteristics}}
                        <ul class="mt-3 mb-1">
                            <li >{{this.title}}: {{value}}</li>
                        </ul>
                        {{/each}}                       

                    </div>
                </div>
            </div>
            {{/each}}
{{#with service}}
    <div class="card p-0 ">
        <div class="card-body text-bg-success text-center ">
            <h2>{{title}}</h2>
            <p>{{description}}</p>
            <div class="row">
                {{#each buttons}}
                <div class="col-4"></div>
                <button href={{link}} class=" text-center col-4  btn btn-primary btn-sm m-2">{{text}}</button>
                <div class="col-4"></div>
                {{/each}}
            </div>
        </div>
    </div>
    {{/with}}
    <hr class="my-5"> 
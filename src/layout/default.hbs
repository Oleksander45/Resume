{{!--
Це леяут по замовчюванню, котрий вже містить базову структуру HTML документа
І котрий обгортає код container файлів для будь-яких ендпоїнтів
--}}
<!DOCTYPE html>
<html>

<head>
  <title>
    {{page.title}}
  </title>
  <meta charset='utf-8' />
  <link href='css/index.css' rel='stylesheet' />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
			integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
  {{#with header}}
  <header>
    <div>
      {{#with name}}
      <h1>{{firstname}} {{secondname}}</h1>
      {{/with}}
    </div>
    <div>
      <b>{{position}}</b>
    </div>
    <br>
    <div>
      <em>{{salary}}</em>
    </div>
    <br>

    <div>
      <address>{{adress}}</adress>
    </div>
    <br>
    <hr>
  </header>
  {{/with}}
  {{>nav}}
  {{! ↓ ця кострукція показує куди шаблонізатору треба вставляти код з container файлу --}}
  {{{body}}}
  {{#with footer}}
  <footer>
    <hr>
    <div>
      {{#with social}}
      {{>ll text=email.text href=email.href blank=true }}
      {{>ll text=phone.text href=phone.href blank=true }}
      {{>ll text=lincendin.text href=lincendin.href blank=true noLine=true }}
      {{/with}}
    </div>
    <br>
    <div>
      <em>Copyright by {{../header/name/firstname}} {{../header/name/secondname}}</header></em>
    </div>
    <br>
    <div>
      <address>{{../header/adress}}</adress>
    </div>

  </footer>
  {{/with}}

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
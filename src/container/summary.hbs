{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
  {{#with main}}
    <main>
        <section class="mb-5">
            <div>
               {{>subtitle data=sub.[0].name  big=sub.[0].big}}
            </div>
            <div>
                <p>
                    {{summary.text}}
                </p>
            </div>
        </section>
        
        <section>
            <div>
                {{>subtitle data=sub.[1].name  big=sub.[1].big}}
            </div>
            <div>
                <p>
                    {{experience.text}}
                </p>
            </div>
        </section>
       
    </main>
    {{/with}}

  

</div>


{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        {{#with main}}
        <section>
            {{>subtitle data=sub.[0].name  big=sub.[0].big}}
            <ul>
                {{#each scills}}
                <li>
                    {{name}}
                    {{#if points includeZero = true}} ({{points}}) {{/if}}
                    {{#if isPoint}} (top) {{/if}}
                    {{#unless points includeZero = true }} (not study) {{/unless}}
                    {{#unless points }}
                    {{#if points includeZero = true}} (not finished yet) {{/if}}
                    {{/unless}}

                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{>subtitle data=sub.[1].name  big=sub.[1].big}}
            <ul>
                {{#each hobbies}}
                <li>
                    {{name}}                   
                    {{#if isMain}} (favorite) {{/if}}
                 
                </li>
                {{/each}}
            </ul>
        </section>
        {{/with}}
    </main>
</div>

